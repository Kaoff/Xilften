{% extends 'layout.html.twig' %}
{% block body %}
    <div class="container">

        <div class="my-4 text-center text-lg-center">
            <img class="img-fluid" src="{{ asset('style/images/xilften.png') }}" alt="">
        </div>

        <section class="p-0" id="movies">
            <div class="container-fluid p-0">
                <h2 class="col-lg-12 my-4 text-center text-lg-left">Movies</h2>
                <div class="row no-gutters popup-gallery">
                    {% for movie in movies %}
                        <div class="col-lg-3 col-sm-6">
                            <a class="media-box" href="{{ path('movie', {'id': movie.id}) }}">
                                <img class="img-fluid" src="{{ movie.image }}" alt="">
                                <div class="media-box-caption">
                                    <div class="media-box-caption-content">
                                        <div class="project-category text-faded">
                                            {{ movie.title }}
                                        </div>
                                        <div class="project-name">
                                            <i class="fas fa-heart"></i>{{ movie.upvotes }}
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>

        <section class="p-0" id="tvShows">
            <div class="container-fluid p-0">
                <h2 class="col-lg-12 my-4 text-center text-lg-left">TvShows</h2>
                <div class="row no-gutters popup-gallery">
                    {% for tvShow in tvShows %}
                        <div class="col-lg-3 col-sm-6">
                            <a class="media-box" href="{{ path('tvShow', {'id': tvShow.id}) }}">
                                <img class="img-fluid" src="{{ tvShow.image }}" alt="">
                                <div class="media-box-caption">
                                    <div class="media-box-caption-content">
                                        <div class="project-category text-faded">
                                            {{ tvShow.title }}
                                        </div>
                                        <div class="project-name">
                                            <i class="fas fa-heart"></i>{{ tvShow.upvotes }}
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    </div>
{% endblock %}
{% block javascripts %}{% endblock %}