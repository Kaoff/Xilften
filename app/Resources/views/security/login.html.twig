{% extends 'layout.html.twig' %}
{% block body %}
    <div id="login-body">

        <div class="login-form">
            <div class="my-4 text-center text-lg-center">
                <img class="img-fluid" src="{{ asset('style/images/xilften.png')}}" alt="">
            </div>
            <form action="{{ path('login') }}" method="post">
                <div class="form-group">
                    <label for="username">Email address</label>
                    <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}"
                           aria-describedby="emailHelp" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="_password" placeholder="Password">
                </div>
                <div class="form-group">
                <button type="submit" class="btn btn-dark btn-block">Login</button>
                </div>
            </form>

            <div class="text-center">
                <h5><a href="{{ path('register') }}">Create an account ?</a></h5>
            </div>
        </div>

